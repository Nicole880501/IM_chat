@page
<!DOCTYPE html>
<html lang="zh-TW">

<head>
    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>網路聊天室</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <div class="connection-count text-center mb-1">
        <p>目前在線人數: <span id="connectionCount">0</span></p>
    </div>

    <div class="chat-container">
        <div class="mb-2">
            <label for="userInput" class="form-label">用戶名稱</label>
            <input type="text" class="form-control" id="userInput" placeholder="輸入你的名字" />
        </div>

        <div class="mb-2">
            <label for="messageInput" class="form-label">訊息</label>
            <input type="text" class="form-control" id="messageInput" placeholder="輸入訊息" />
        </div>

        <div class="d-grid mb-2">
            <button class="btn btn-primary" id="sendButton">發送訊息</button>
        </div>

        <div>
            <h5 class="text-center mb-2">聊天室</h5>
            <ul id="messagesList"></ul>
        </div>





    </div>





    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
    <script src="~/js/site.js"></script>



</body>

</html>
