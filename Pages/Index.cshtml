@page
<!DOCTYPE html>
<html lang="zh-TW">

<head>
    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


</head>

<body>
    <div class="connection-count text-center mb-1">
        <p>Online: <span id="connectionCount">0</span></p>
    </div>

    <div class="chat-container">
        <div class="mb-2">
            <label for="userInput" class="form-label">User Name</label>
            <input type="text" class="form-control" id="userInput" placeholder="" />
        </div>

        <div class="mb-2">
            <label for="messageInput" class="form-label">Message</label>
            <input type="text" class="form-control" id="messageInput" placeholder="" />
        </div>

        <div class="d-grid mb-2">
            <button class="btn btn-primary" id="sendButton">Send</button>
        </div>

        <div>
            <h5 class="text-center mb-2">Chatting Room</h5>
            <ul id="messagesList"></ul>
        </div>





    </div>





    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
    <script src="~/js/site.js"></script>



</body>

</html>
